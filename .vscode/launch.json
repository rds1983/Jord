    "version": "0.2.0",
    "configurations": [
        {
            "name": "TroublesOfJord.Game",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildGame",
            "program": "${workspaceFolder}/src/TroublesOfJord.Game/bin/Debug/netcoreapp3.1/TroublesOfJord.Game.dll",
            "args": ["/start:0"],
            "cwd": "${workspaceFolder}/src/TroublesOfJord.Game",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}